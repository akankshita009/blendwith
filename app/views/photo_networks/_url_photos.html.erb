<div class="row">
  <div class="span4 offset1">
    <%= form_for(@photo_url) do |f| %>
      <%= f.text_field :image_url, placeholder: "Please enter image URL..." %>
      <%= f.submit "+Add", class: "btn", :onclick => "return validateurl();", :style => "margin-bottom: 9px;" %>
    <% end %>
  </div>
</div>

<form class="form-gallery">
  <ul id="thumbnails" class="thumbnails">
    <% @photourls.each do |photourl| %>
      <% next if photourl.image_url.blank? %>
      <%= content_tag :li, data: { type: 'photo', id: photourl.id, network: 'plusurl' }, class: 'span2' do %>
        <input id="img_<%= photourl.id %>" type="checkbox" value="<%= photourl.id %>">
        <a class="thumbnail"><%= image_tag photourl.image_url, :size => "100x100"  %></a>
        <%#= link_to "", photourl, confirm: "Are you sure you want to delete?", method: :delete, class: "icon delete" %>
        <span class="awe-cog"></span>
        <a href="#demoModal" data-toggle="modal" class="awe-trash"></a>
      <% end %>

    <% end %>
  </ul>
</form>

<script type="text/javascript">
  function validateurl() {
    if ($("#photo_url_image_url").val() == "")
    {
      alert("You have to give image url to add.");
      return false;
    }
    return true;
  }

</script>

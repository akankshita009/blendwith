<script src="http://vjs.zencdn.net/4.1/video.js"></script>
<%= javascript_include_tag "plugins/player_cheage/vjs.youtube.js" %>
<style>
    .vjs-default-skin .vjs-big-play-button {
        display: none;
    }

    .vjs-control-bar {
        position: absolute;
        bottom: 0;
    }
</style>

<!-- Main data container -->
<div>
  <div class="row-fluid">
    <%= render :partial => 'left_nav' %>
    <article class="span10 special">
      <div class="content">
        <div class="row-fluid">
          <div class="center">
            <h2 class="orange">Add My Videos</h2>
            <!-- Secondary navigation -->
          </div>
          <div class="span10 center">
            <div class="nav-secondary">
              <%= render :partial => 'video_networks/social_nav' %>
            </div>
            <!-- /Secondary navigation -->
          </div>
        </div>

        <div class="row-fluid">
          <div class="page-header custom">
            <h3>
              <span id="name-playlist-detail"><%= @video_album.name %></span>

              <br>
              <small>Select all | Select none</small>
            </h3>

          </div>
        </div>

        <div class="row-fluid">
          <div class="page-container">
            <form class="form-gallery">
              <ul id="thumbnails" class="thumbnails">
                <% @video_album.videos.each do |video| %>
                    <%= render :partial => 'video', :locals => {video: video} %>
                <% end %>
              </ul>
            </form>
          </div>
        </div>
      </div>

      <%= render :partial => 'video_edit' %>
    </article>
  </div>
</div>

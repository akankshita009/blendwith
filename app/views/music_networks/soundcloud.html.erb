<!-- Main data container -->
<div>

  <div class="row-fluid">
    <%= render :partial => 'left_nav' %>
    <article class="span10 special">
    <div class="content">
      <div class="row-fluid">
        <div class="center">
          <h2 class="orange">Add My Photos</h2>
          <!-- Secondary navigation -->
        </div>
        <div class="span10 center">
          <div class="nav-secondary">
            <%= render :partial => 'social_nav' %>
          </div>
          <!-- /Secondary navigation -->
        </div>
      </div>
      <div class="row-fluid">
        <div class="page-header custom">
          <h3>A Great Playlist Title <span class="awe-cog"></span><br /><small>Select all | Select none</small></h3>

          <%= render 'shared/set_feed' %>

        </div>
      </div>
      <div class="row-fluid">
        <div class="page-container">
          <form class="form-gallery">
            <ul id="thumbnails" class="thumbnails">
              <%= render 'soundcloud_tracks' %>
            </ul>
          </form>
        </div>
      </div>

    </div>
    <div class="form">
      <a href="<%= image_path("sample_content/sample-image-900x500.png") %>" class="form-image">
        <img class="element" src="<%= image_path("sample_content/sample-image-250x150.png") %>" alt="" />
        <span class="awe-zoom-in"></span>
      </a>
      <form>
        <fieldset>
          <div class="control-group">
            <label class="control-label" for="input">Text input</label>
            <div class="controls">
              <input id="input" class="input-xlarge" type="text">
              <p class="help-block">Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="optionsCheckbox">Checkbox</label>
            <div class="controls">
              <label class="checkbox">
                <input id="optionsCheckbox" type="checkbox" value="option1">
                Curabitur vehicula porttitor suscipit
              </label>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="select">Select list</label>
            <div class="controls">
              <select id="select">
                <option>Pick one</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="textarea">Textarea</label>
            <div class="controls">
              <textarea id="textarea" class="input-xlarge" rows="3"></textarea>
            </div>
          </div>
          <div class="form-actions">
            <button class="btn btn-wuxia btn-normal btn-primary" type="submit">Save changes</button>
            <a class="btn btn-wuxia btn-normal btn-primary close-form">Cancel</a>
          </div>
        </fieldset>
      </form>
    </div>
    </article>
  </div>
</div>
<%= javascript_include_tag 'http://connect.soundcloud.com/sdk.js'%>
<script type="text/javascript">
  $(function() {
    SC.initialize({
      client_id:  '<%= CONFIG[:soundcloud][:client_id] %>',
      access_token: '<%= current_user.soundcloud.try(:access_token) %>'
    });
  });
</script>
<%= javascript_include_tag 'soundcloud' %>
